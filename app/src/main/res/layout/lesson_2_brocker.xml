<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:fontFamily="@font/opensans_regular"
        android:text="@string/what_is_fond_birza"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"

        android:fontFamily="@font/opensans_bold"
        android:gravity="left"
        android:text="Кто такие брокеры?"
        android:textColor="@color/blue"
        android:textSize="18sp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:fontFamily="@font/opensans_regular"
        android:text="@string/who_is_brockers"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"

        android:fontFamily="@font/opensans_bold"
        android:gravity="left"
        android:text="Сколько стоят брокерские услуги?"
        android:textColor="@color/blue"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:fontFamily="@font/opensans_regular"
        android:text="@string/how_many_brockers_cost"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"

        android:fontFamily="@font/opensans_bold"
        android:gravity="left"
        android:text="Как выбрать брокера?"
        android:textColor="@color/blue"
        android:textSize="18sp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:fontFamily="@font/opensans_regular"
        android:text="@string/how_to_choose_brocker"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"

        android:fontFamily="@font/opensans_bold"
        android:gravity="left"
        android:text="Как открыть брокерский счёт?"
        android:textColor="@color/blue"
        android:textSize="18sp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:fontFamily="@font/opensans_regular"
        android:text="@string/how_to_open_brocker"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_understand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:text="ПОНЯТНО!" />


</LinearLayout>